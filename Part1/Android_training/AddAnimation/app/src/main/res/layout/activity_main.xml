<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.li.ramon.addanimation.MainActivity">


    <Button
        android:id="@+id/cross_fade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cross fade Animation" />

    <Button
        android:id="@+id/viewpager_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Viewpager Animation" />

    <Button
        android:id="@+id/card_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/card_animation" />

    <Button
        android:id="@+id/zoom_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/zoom_animation" />

    <Button
        android:id="@+id/layout_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/layout_change_animate" />
</LinearLayout>
