<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/post_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post Event" />
    <Button
        android:id="@+id/send_sticky_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send sticky event"
        app:layout_constraintTop_toBottomOf="@+id/post_btn"/>

    <Button
        android:id="@+id/sticky_activity_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start sticky activity"
        app:layout_constraintTop_toBottomOf="@+id/send_sticky_btn"/>

</android.support.constraint.ConstraintLayout>